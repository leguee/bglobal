@model testApplication.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1>Alta de vehículo</h1>

<h4>Datos principales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patente" class="control-label"></label>
                <input asp-for="Patente" class="form-control" />
                <span asp-validation-for="Patente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <select asp-for="Marca" class="form-control">
                    <option value="1">Chevrolet</option>
                    <option value="2">Fiat</option>
                    <option value="3">Audi</option>
                    <option value="4">Renault</option>
                </select>

                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />

                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Puertas" class="control-label"></label>
                <input asp-for="Puertas" class="form-control" />
                <span asp-validation-for="Puertas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titular" class="control-label"></label>
                <select asp-for="Titular" class="form-control" asp-items="@(new SelectList(@ViewBag.ListOfEmployee, "Id","Employee_name"))">
                   
                </select>


            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
